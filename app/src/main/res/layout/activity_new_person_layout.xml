<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp">

        <ImageButton
            android:id="@+id/cancel_info"
            android:src="@drawable/icon_cancel"
            android:scaleType="centerInside"
            android:onClick="onClick"
            android:background="@color/touming"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/title_heigh"
            android:layout_height="@dimen/title_heigh"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

        <ImageButton
            android:id="@+id/save_info"
            android:onClick="onClick"
            android:scaleType="centerInside"
            android:src="@drawable/icon_done"
            android:background="@color/touming"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/title_heigh"
            android:layout_height="@dimen/title_heigh"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>


        <ImageButton
            android:id="@+id/delete_info"
            android:src="@drawable/icon_delete"
            android:scaleType="centerInside"
            android:onClick="onClick"
            android:background="@color/touming"
            android:layout_toLeftOf="@id/save_info"
            android:layout_width="@dimen/title_heigh"
            android:layout_height="@dimen/title_heigh"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/title_heigh"
        android:paddingLeft="@dimen/title_heigh"
        android:paddingRight="@dimen/title_heigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/new_photo"
            android:src="@drawable/lan"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/title_heigh"/>

        <EditText
            android:id="@+id/new_name"
            android:hint="姓名"
            android:inputType="textPersonName"
            android:textSize="@dimen/title_text"
            android:layout_marginBottom="@dimen/title_heigh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_heigh" />

        <EditText
            android:id="@+id/new_number"
            android:hint="号码"
            android:inputType="number"
            android:textSize="@dimen/title_text"
            android:layout_marginBottom="@dimen/title_heigh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_heigh" />

    </LinearLayout>

</LinearLayout>